! .Xresources, optimized for rxvt-unicode terminal.
! Yekta Leblebici <yekta@iamyekta.com>
!
! Perl extensions: vtwheel, selection
! Place these under ~/.rxvt-ext
!
! Font: https://github.com/chrissimpkins/Hack
! Place font files under ~/.fonts

! Font rendering
Xft.lcdfilter: lcddefault
Xft.dpi:        96
Xft.hinting:    1
Xft.hintstyle:  hintfull
Xft.antialias:  1
Xft.rgba:       rgb
!Xcursor*size:   24

! Perl extensions
URxvt.perl-lib: ~/.rxvt-ext
URxvt*perl-ext-common: vtwheel, selection 

! Fonts
URxvt*font: xft:Hack:pixelsize=12:style=Regular, xft:Dejavu Sans Mono:pixelsize=12,style=Book
URxvt*boldFont: xft:Hack:pixelsize=12:style=Bold
URxvt*italicFont: xft:Hack:pixelsize=12:style=Italic
URxvt*boldItalicFont: xft:Hack:pixelsize=12:style=Bold\ Italic
URxvt*letterSpace: -2

! Behaviour
URxvt*loginShell: true
Rxvt*vt100*geometry: 80x60
URxvt*saveLines: 2000
URxvt*termName: xterm-256color
URxvt*scrollstyle: xterm
URxvt*eightBitInput: false
URxvt*scrollWithBuffer: false
URxvt*scrollTtyOutput: false
URxvt*scrollTtyKeypress: true

! Appearance
URxvt*scrollBar: false
URxvt*internalBorder: 0
URxvt*externalBorder: 0

! Molokai theme
URxvt*background: #101010
